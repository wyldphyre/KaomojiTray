<Window x:Class="KaomojiTray.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Deactivated="Window_Deactivated" Closing="Window_Closing">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="160*"/>
            <RowDefinition Height="159*"/>
        </Grid.RowDefinitions>
        <DockPanel x:Name="LibraryDockPanel" Margin="10" Grid.RowSpan="2">
            <StackPanel x:Name="CategoryStackPanel" MinWidth="75"/>
            <ScrollViewer x:Name="SectionScrollViewer">
                <StackPanel x:Name="SectionStackPanel"/>
            </ScrollViewer>
        </DockPanel>

    </Grid>
</Window>
